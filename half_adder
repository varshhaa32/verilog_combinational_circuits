module half_adder(a,b,sum,cout);
input a,b;
output reg sum,cout;
always@(*)
begin
    sum=a^b;
    cout=~a&b;
end
endmodule

//testbench
module ha_tb;
reg a,b;
wire sum,cout;
half_adder a1(a,b,sum,cout);
initial begin
    a=1'b0;b=1'b0;#10;
    a=1'b0;b=1'b1;#10;
    a=1'b1;b=1'b0;#10;
    a=1'b1;b=1'b1;
    #10;
end
endmodule
